{
  "name": "tw-clamp-css",
  "version": "1.1.1",
  "description": "TailwindCSS v4.0 compatible CSS clamp()",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "tailwind",
    "tailwindcss",
    "css",
    "plugin",
    "clamp",
    "tailwind-merge"
  ],
  "homepage": "https://github.com/michaelbrusegard/tw-clamp-css#readme",
  "bugs": "https://github.com/michaelbrusegard/tw-clamp-css/issues",
  "repository": "michaelbrusegard/tw-clamp-css",
  "author": {
    "name": "Michael Brusegard",
    "url": "https://github.com/michaelbrusegard"
  },
  "exports": {
    "./static": "./dist/static/tw-clamp.css",
    "./static/merge": {
      "types": "./dist/static/merge.d.ts",
      "import": "./dist/static/merge.mjs",
      "require": "./dist/static/merge.cjs"
    },
    "./dynamic": {
      "types": "./dist/dynamic/index.d.ts",
      "import": "./dist/dynamic/index.mjs",
      "require": "./dist/dynamic/index.cjs"
    },
    "./dynamic/merge": {
      "types": "./dist/dynamic/merge.d.ts",
      "import": "./dist/dynamic/merge.mjs",
      "require": "./dist/dynamic/merge.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpx @tailwindcss/cli -i ./src/static/tw-clamp.css -o ./dist/static/tw-clamp.css -m && pnpx esbuild src/static/merge.js --bundle --outfile=dist/static/merge.mjs --format=esm --minify && pnpx esbuild src/static/merge.js --bundle --outfile=dist/static/merge.cjs --format=cjs --minify && cp src/static/merge.d.ts dist/static/merge.d.ts",
    "generate-css": "node ./src/static/index.js"
  },
  "peerDependencies": {
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "esbuild": "^0.25.8",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11"
  },
  "packageManager": "pnpm@10.6.3"
}
